{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format and fix files",
      "type": "shell",
      "command": "cd myoro_matchup && bash tool/format_and_fix.sh && cd ../myoro_matchup_api && bash tool/format_and_fix.sh",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run Flutter build runner",
      "type": "shell",
      "command": "cd myoro_matchup && bash tool/generate_code.sh",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Setup environment",
      "type": "shell",
      "command": "cd myoro_matchup && bash tool/setup.sh && cd ../myoro_matchup_api && bash tool/format_and_fix.sh",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Generate icon",
      "type": "shell",
      "command": "cd myoro_matchup && bash tool/generate_icon.sh",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Start PostgreSQL container",
      "type": "shell",
      "command": "docker-compose up -d",
      "options": {
        "cwd": "${workspaceFolder}/myoro_matchup_api"
      },
      "problemMatcher": []
    },
    {
      "label": "Deploy myoro_matchup",
      "type": "shell",
      "command": "bash myoro_matchup/tool/deploy.sh ${input:versionType}",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "versionType",
      "type": "pickString",
      "description": "Select version type",
      "options": [
        {
          "label": "Patch",
          "value": "patch"
        },
        {
          "label": "Minor",
          "value": "minor"
        },
        {
          "label": "Major",
          "value": "major"
        }
      ]
    }
  ]
}