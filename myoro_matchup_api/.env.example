# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/myoro_matchup
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# JWT Configuration
# Generate a secure random string (minimum 32 characters for HMAC-SHA256)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your-secret-key-here-minimum-32-characters-for-production

# Email Configuration
# For Gmail: use smtp.gmail.com, port 587, and an app password
# For SendGrid: use smtp.sendgrid.net, port 587, and your API key as password
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your-email@gmail.com
SPRING_MAIL_PASSWORD=your-app-password
SPRING_MAIL_FROM=noreply@myoro.com

# Frontend URL (for password reset links and CORS)
APP_FRONTEND_URL=http://localhost:3000

# Image Storage (optional - has defaults)
APP_IMAGES_STORAGE_PATH=./uploads/images
APP_IMAGES_BASE_URL=/api/images

# Server Port (optional - defaults to 8080)
SERVER_PORT=8080
